<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ficheros__actvity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.usuario.ficheros.Ficheros_Actvity">

    <Button
        android:text="escribir en Interna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/btn_interna"
        android:layout_alignStart="@+id/btn_externa"
        android:layout_alignEnd="@+id/btn_externa" />

    <Button
        android:text="Escribir en Externa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_interna"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:id="@+id/btn_externa" />

    <Button
        android:text="Lectura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/btn_lectura"
        android:layout_below="@+id/btn_externa"
        android:layout_alignStart="@+id/btn_externa"
        android:layout_alignEnd="@+id/btn_interna" />

    <Button
        android:text="Codificación"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/btn_lectura"
        android:id="@+id/btn_codificacion"
        android:layout_alignEnd="@+id/btn_exploracion" />

    <Button
        android:text="Exploración"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_codificacion"
        android:layout_marginTop="22dp"
        android:id="@+id/btn_exploracion"
        android:layout_alignStart="@+id/btn_externa"
        android:layout_alignEnd="@+id/btn_externa" />
</RelativeLayout>
